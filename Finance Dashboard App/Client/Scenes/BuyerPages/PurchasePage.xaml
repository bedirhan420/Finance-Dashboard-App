<UserControl x:Class="FinanceApp.Scenes.PurchasePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinanceApp.Scenes"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="246" Width="218">
        <Label Name="text_label" Content="BUY PRODUCT" Foreground="#d1d3da" Margin="0,0,0,10" Width="90"/>

        <Label Name="product_id_label" Content="Product Id" Foreground="#d1d3da" Margin="0,0,0,10"/>
        <ComboBox Name="product_id_combobox" Width="180" Margin="0,0,0,10"/>

        <Label Name="buyer_label" Content="Buyer" Foreground="#d1d3da" Margin="0,0,0,10"/>
        <TextBox Name="buyer_textbox" Text="Name Surname..." Width="180" Margin="0,0,0,10"/>

        <Button Name="buy_button" Content="Buy" Height="30" Width="50" Margin="0,10,0,10" Click="buy_button_Click"/>
    </StackPanel>
</UserControl>
