<UserControl x:Class="FinanceApp.Scenes.AdminLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinanceApp.Scenes"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="246" Width="218" >
        <Label Name="text_label" Content="ADMIN LOGIN" Foreground="#d1d3da" Margin="0,0,0,10" Width="90"/>
        <Label Name="mail_label" Content="Mail" Foreground="#d1d3da" Margin="0,0,0,10"/>
        <TextBox Name="mail_textbox" Text="Mail..." Width="180" Margin="0,0,0,10"/>

        <Label Name="password_label" Content="Password" Foreground="#d1d3da" Margin="0,0,0,10"/>
        <TextBox Name="password_textbox"  Text="Password..." Width="180" Margin="0,0,0,10"/>

        <Button Name="login_button" Content="Log In" Height="30" Width="50" Margin="0,10,0,10" Click="login_button_Click"/>
    </StackPanel>
</UserControl>
